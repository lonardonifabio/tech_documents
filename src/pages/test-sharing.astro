---
const title = "Test Mobile Sharing - AI Document Library";
const description = "Test page to verify mobile LinkedIn sharing functionality works correctly on iOS Safari and other mobile browsers.";
const testUrl = "https://lonardonifabio.github.io/tech_documents/test-sharing";
const imageUrl = "https://www.fabiolonardoni.it/AIdatasciencelibrary_cover.JPG";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <title>{title}</title>
    
    <!-- iOS Safari specific meta tags -->
    <meta name="apple-touch-fullscreen" content="yes">
    <meta name="format-detection" content="telephone=no">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="AI Doc Library">
    
    <!-- Additional mobile sharing optimization -->
    <meta name="HandheldFriendly" content="true">
    <meta name="MobileOptimized" content="width">
    
    <!-- Enhanced Open Graph for LinkedIn sharing -->
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:type" content="website">
    <meta property="og:url" content={testUrl}>
    <meta property="og:image" content={imageUrl}>
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:image:alt" content="AI & Data Science Document Library - Mobile Test">
    <meta property="og:site_name" content="AI & Data Science Document Library">
    <meta property="og:locale" content="en_US">
    
    <!-- Enhanced Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content={imageUrl}>
    <meta name="twitter:image:alt" content="AI & Data Science Document Library - Mobile Test">
    <meta name="twitter:site" content="@fabiolonardoni">
    <meta name="twitter:creator" content="@fabiolonardoni">
    
    <!-- LinkedIn specific meta tags -->
    <meta property="article:author" content="Fabio Lonardoni">
    
    <!-- Additional meta for mobile sharing -->
    <meta name="author" content="Fabio Lonardoni">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href={testUrl}>
    
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        margin: 0;
        padding: 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        color: white;
      }
      
      .container {
        max-width: 600px;
        margin: 0 auto;
        background: rgba(255, 255, 255, 0.1);
        padding: 30px;
        border-radius: 15px;
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      }
      
      h1 {
        text-align: center;
        margin-bottom: 30px;
        font-size: 2rem;
      }
      
      .test-info {
        background: rgba(255, 255, 255, 0.2);
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 30px;
      }
      
      .share-buttons {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-top: 30px;
      }
      
      .share-btn {
        padding: 15px 20px;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        text-decoration: none;
        text-align: center;
        transition: transform 0.2s;
      }
      
      .share-btn:active {
        transform: scale(0.95);
      }
      
      .linkedin {
        background: #0077b5;
        color: white;
      }
      
      .twitter {
        background: #1da1f2;
        color: white;
      }
      
      .copy-link {
        background: rgba(255, 255, 255, 0.9);
        color: #333;
      }
      
      .meta-info {
        background: rgba(0, 0, 0, 0.2);
        padding: 15px;
        border-radius: 8px;
        margin-top: 20px;
        font-size: 14px;
        font-family: monospace;
      }
      
      @media (max-width: 480px) {
        .container {
          padding: 20px;
        }
        
        h1 {
          font-size: 1.5rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>üì± Mobile Sharing Test</h1>
      
      <div class="test-info">
        <h3>üéØ Test Instructions:</h3>
        <p>1. Copy the link below</p>
        <p>2. Open LinkedIn mobile app or Safari</p>
        <p>3. Paste the link in a post</p>
        <p>4. Verify the preview shows:</p>
        <ul>
          <li>‚úÖ Correct title</li>
          <li>‚úÖ Description</li>
          <li>‚úÖ Cover image</li>
        </ul>
      </div>
      
      <div class="share-buttons">
        <a href="https://www.linkedin.com/sharing/share-offsite/?url=https://lonardonifabio.github.io/tech_documents/test-sharing" 
           class="share-btn linkedin" 
           target="_blank">
          üì§ Share on LinkedIn
        </a>
        
        <a href="https://twitter.com/intent/tweet?url=https://lonardonifabio.github.io/tech_documents/test-sharing&text=Testing mobile sharing for AI Document Library" 
           class="share-btn twitter" 
           target="_blank">
          üê¶ Share on Twitter
        </a>
        
        <button class="share-btn copy-link" onclick="copyLink()">
          üìã Copy Link
        </button>
      </div>
      
      <div class="meta-info">
        <strong>Current URL:</strong><br>
        <span id="current-url">https://lonardonifabio.github.io/tech_documents/test-sharing</span>
        
        <br><br>
        
        <strong>Image URL:</strong><br>
        <span>https://www.fabiolonardoni.it/AIdatasciencelibrary_cover.JPG</span>
        
        <br><br>
        
        <strong>User Agent:</strong><br>
        <span id="user-agent"></span>
      </div>
      
      <div style="text-align: center; margin-top: 30px;">
        <a href="/" style="color: white; text-decoration: underline;">
          ‚Üê Back to Main Library
        </a>
      </div>
    </div>
    
    <script>
      // Display user agent for debugging
      document.getElementById('user-agent').textContent = navigator.userAgent;
      
      // Copy link function
      function copyLink() {
        const url = 'https://lonardonifabio.github.io/tech_documents/test-sharing';
        
        if (navigator.share) {
          // Use native sharing on mobile
          navigator.share({
            title: 'Test Mobile Sharing - AI Document Library',
            text: 'Test page to verify mobile LinkedIn sharing functionality',
            url: url
          }).catch(console.error);
        } else if (navigator.clipboard) {
          // Fallback to clipboard
          navigator.clipboard.writeText(url).then(() => {
            alert('Link copied to clipboard!');
          }).catch(() => {
            fallbackCopy(url);
          });
        } else {
          fallbackCopy(url);
        }
      }
      
      function fallbackCopy(text) {
        const textArea = document.createElement('textarea');
        textArea.value = text;
        document.body.appendChild(textArea);
        textArea.select();
        try {
          document.execCommand('copy');
          alert('Link copied to clipboard!');
        } catch (err) {
          alert('Please copy manually: ' + text);
        }
        document.body.removeChild(textArea);
      }
      
      // Test if we're on mobile
      const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
      if (isMobile) {
        console.log('Mobile device detected');
      }
    </script>
  </body>
</html>
